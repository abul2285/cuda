- var clientNumber = 1;
mixin teastimonialClient()
    each val, key in {'Chanel Iman':'CEO of Pinterest','ADRIANA LIMA':'Founder of Instagram','ANNE HATHAWAY':'Lead Designer at Behance','EMMA STONE':'Co-Founder of Shazam'}
        .col-md-6.com-sm-12
            .clients
                .clients__img
                    img(src=`../../resources/img/${clientNumber++}.jpg`)
                .client__text
                    .clients__description
                        p “Nullam dapibus blandit orci, viverra gravida dui lobortis eget. Maecenas fringilla urna eu nisl scelerisque.”
                    .clients__name
                        h3= key
                    .clients__designation
                        p= val